{
  "name": "renovate-config-autoguru",
  "version": "1.0.84",
  "description": "AutoGuru's org-wide Renovate config",
  "homepage": "https://github.com/autoguru-au/octane/tree/master/packages/renovate-config-autoguru#readme",
  "repository": "https://github.com/autoguru-au/octane/tree/master/packages/renovate-config-autoguru",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        ":prHourlyLimit2",
        ":prNotPending",
        ":rebaseStalePrs",
        ":renovatePrefix",
        ":semanticCommits",
        ":timezone(Australia/Brisbane)",
        ":updateNotScheduled"
      ],
      "packageRules": [
        {
          "depTypeList": [
            "dependencies"
          ],
          "semanticCommitType": "fix"
        },
        {
          "commitMessageExtra": "{{newValue}}",
          "commitMessageTopic": "{{depName}}",
          "managers": [
            "npm",
            "nvm"
          ]
        },
        {
          "automerge": true,
          "commitMessageExtra": "",
          "groupName": "definitely typed (npm)",
          "managers": [
            "npm"
          ],
          "packagePatterns": [
            "^@types/"
          ],
          "prPriority": 99,
          "recreateClosed": true,
          "schedule": "after 1pm on Monday"
        },
        {
          "commitMessageExtra": "",
          "depTypeList": [
            "devDependencies"
          ],
          "excludePackagePatterns": [
            "^@?autoguru",
            "-autoguru$"
          ],
          "groupName": "dev dependencies (npm)",
          "managers": [
            "npm"
          ],
          "recreateClosed": true,
          "schedule": "after 1pm on Monday"
        },
        {
          "commitMessageExtra": "",
          "depTypeList": [
            "peerDependencies"
          ],
          "excludePackagePatterns": [
            "^@?autoguru",
            "-autoguru$"
          ],
          "groupName": "peer dependencies (npm)",
          "managers": [
            "npm"
          ],
          "recreateClosed": true,
          "schedule": "after 1pm on Monday",
          "rangeStrategy": "widen"
        },
        {
          "groupName": "AutoGuru",
          "packagePatterns": [
            "^@?autoguru",
            "-autoguru$"
          ],
          "prPriority": 98,
          "schedule": "before 8am on every weekday"
        },
        {
          "extends": [
            "group:monorepos"
          ],
          "recreateClosed": true
        },
        {
          "groupName": "relay",
          "packagePatterns": [
            "^relay-"
          ]
        },
        {
          "automerge": true,
          "prPriority": 99,
          "schedule": "before 7am on every weekday",
          "updateTypes": [
            "pin"
          ]
        }
      ],
      "commitMessageAction": "",
      "ignoreNpmrcFile": true,
      "lazyGrouping": false,
      "postUpdateOptions": [
        "yarnDedupeHighest"
      ],
      "schedule": "before 8am every weekday",
      "rangeStrategy": "auto",
      "prConcurrentLimit": 4,
      "prNotPendingHours": 1,
      "lockFileMaintenance": {
        "enabled": true,
        "extends": "schedule:weekly"
      }
    }
  }
}
