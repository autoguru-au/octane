{
  "name": "renovate-config-autoguru",
  "version": "1.0.24",
  "description": "AutoGuru's org-wide Renovate config",
  "homepage": "https://github.com/autoguru-au/octane/tree/master/packages/renovate-config-autoguru#readme",
  "repository": "https://github.com/autoguru-au/octane/tree/master/packages/renovate-config-autoguru",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "branchPrefix": "renovate--",
      "prHourlyLimit": "4",
      "ignoreNpmrcFile": true,
      "schedule": [
        "after 4pm and before 8am every weekday",
        "every weekend"
      ],
      "timezone": "Australia/Brisbane",
      "semanticCommits": true,
      "semanticCommitType": "chore",
      "commitMessagePrefix": "{{semanticCommitType}}({{semanticCommitScope}}):",
      "commitMessageAction": "{{#if isPin}}Pin{{else}}{{#if isRollback}}Roll back{{else}}Update{{/if}}{{/if}}",
      "commitMessageExtra": "to {{#unless isRange}}v{{/unless}}{{#if isMajor}}{{newVersionMajor}}.x{{else}}{{newVersion}}{{/if}}",
      "packageRules": [
        {
          "packagePatterns": [
            "@autoguru/.*"
          ],
          "schedule": "at any time",
          "groupName": "AutoGuru"
        },
        {
          "depTypeList": [
            "dependencies"
          ],
          "rangeStrategy": "update-lockfile"
        },
        {
          "depTypeList": [
            "devDependencies"
          ],
          "rangeStrategy": "replace"
        },
        {
          "depTypeList": [
            "peerDependencies"
          ],
          "rangeStrategy": "widen"
        }
      ]
    }
  }
}
