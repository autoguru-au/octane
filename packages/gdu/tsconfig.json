{
	"extends": "@autoguru/tsconfig/base",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"rootDir": "./",
		"declaration": true,
		"target": "es2019",
		"module": "commonjs",
		"esModuleInterop": true,
		"importHelpers": false,
		"noEmitHelpers": false,
		"skipLibCheck": true,
		"allowJs": true,
		"lib": ["esnext", "dom"]
	},
	"include": [
		"./*.ts",
		"./*.d.ts",
		"./config/**/*",
		"./commands/**/*",
		"./lib/**/*",
		"./utils/**/*",
		"./next/**/*"
	],
	"exclude": ["node_modules", "dist"]
}
