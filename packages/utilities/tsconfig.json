{
	"extends": "@autoguru/tsconfig/base",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"rootDir": "./src",
		"declaration": true,
		"target": "es2019",
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"importHelpers": false,
		"noEmitHelpers": false,
		"skipLibCheck": true,
		"allowJs": true,
		"lib": ["esnext", "dom"]
	},
	"include": [
		"./*.ts",
		"./*.d.ts",
		"./src/**/*"
	],
	"exclude": ["node_modules", "dist", "tsup.config.ts"]
}
