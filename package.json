{
	"name": "octane",
	"private": true,
	"license": "unlicenced",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"format": "prettier --write \"{*,packages/**/*}.+(js|jsx|ts|tsx|css|scss|json|yml|md|mdx|html)\"",
		"generate": "plop readmes && prettier --write \"{*,packages/**/*}.md\" ",
		"postinstall": "manypkg check",
		"lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\" --cache --quiet --fix",
		"plop": "plop",
		"release": "yarn workspace @autoguru/utilities build && yarn workspaces run build && changeset publish",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"!(stories).{js,tsx,ts,tsx}": [
			"eslint --cache --quiet --fix",
			"jest --bail --findRelatedTests",
			"prettier --write"
		],
		"*.{js,jsx,ts,tsx,json,yml,md,mdx,html}": [
			"prettier --write"
		],
		"package.json": [
			"npx sort-package-json",
			"prettier --write"
		]
	},
	"dependencies": {
		"@autoguru/eslint-plugin": "*",
		"@changesets/cli": "^2.11.1",
		"@manypkg/cli": "^0.16.1",
		"@types/node": "^14.14.2",
		"browserslist-config-autoguru": "*",
		"eslint": "^7.12.0",
		"glob": "^7.1.6",
		"husky": "^4.3.0",
		"jest": "^26.6.1",
		"lint-staged": "^8.2.1",
		"plop": "^2.7.4",
		"prettier": "^2.1.2",
		"typescript": "~3.9.5"
	},
	"volta": {
		"node": "14.4.0",
		"yarn": "1.22.4"
	}
}
