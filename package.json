{
  "name": "octane",
  "private": true,
  "license": "unlicenced",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream --parallel build",
    "format": "prettier --write \"{*,packages/**/*}.+(js|jsx|ts|tsx|css|scss|json|yml|md|mdx|html)\"",
    "generate": "plop readmes && prettier --write \"{*,packages/**/*}.md\" ",
    "release": "lerna publish",
    "sort-package-json": "npx sort-package-json; lerna exec --stream --parallel 'npx sort-package-json'",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "npx sort-package-json",
        "git add"
      ],
      "*.{js,jsx,ts,tsx,css,scss,json,yml,md,mdx,html}": [
        "prettier --write",
        "git add"
      ],
      "*.{js,tsx,ts,tsx}": [
        "jest --bail --findRelatedTests",
        "git add"
      ]
    },
    "relative": true
  },
  "devDependencies": {
    "@types/node": "^11.11.5",
    "browserslist": "^4.5.2",
    "browserslist-config-autoguru": "*",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.5",
    "plop": "^2.2.1",
    "prettier": "^1.16.4",
    "tslib": "^1.9.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "~3.3.0"
  }
}
