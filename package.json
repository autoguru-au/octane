{
  "name": "octane",
  "private": true,
  "license": "unlicenced",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream --parallel build",
    "format": "prettier --write \"{*,packages/**/*}.+(js|jsx|ts|tsx|css|scss|json|yml|md|mdx|html)\"",
    "generate": "plop readmes && prettier --write \"{*,packages/**/*}.md\" ",
    "lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\" --cache --quiet --fix",
    "plop": "plop",
    "release": "lerna publish",
    "sort-package-json": "npx sort-package-json; lerna exec --stream --parallel 'npx sort-package-json'",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "templates/**/*"
    ],
    "linters": {
      "package.json": [
        "npx sort-package-json",
        "git add"
      ],
      "*.{js,jsx,ts,tsx}": [
        "eslint --cache --quiet --fix",
        "git add"
      ],
      "*.{js,jsx,ts,tsx,css,scss,json,yml,md,mdx,html}": [
        "prettier --write",
        "git add"
      ],
      "*.{js,tsx,ts,tsx}": [
        "jest --bail --findRelatedTests",
        "git add"
      ]
    },
    "relative": true
  },
  "devDependencies": {
    "@autoguru/eslint-plugin": "*",
    "@types/node": "^12.12.8",
    "browserslist-config-autoguru": "*",
    "eslint": "^6.6.0",
    "glob": "^7.1.6",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "lint-staged": "^8.2.1",
    "plop": "^2.5.3",
    "prettier": "^1.19.1",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "~3.7.2"
  },
  "volta": {
    "node": "12.10.0",
    "yarn": "1.17.3"
  }
}
