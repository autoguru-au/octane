{
  "name": "octane",
  "private": true,
  "license": "unlicenced",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"{*,packages/**/*}.+(js|jsx|ts|tsx|css|scss|json|yml|md|mdx|html)\"",
    "generate": "plop readmes && prettier --write \"{*,packages/**/*}.md\" ",
    "postinstall": "manypkg check",
    "lint": "eslint \"packages/**/*.{js,jsx,ts,tsx}\" --cache --quiet --fix",
    "plop": "plop",
    "release": "yarn workspaces run build && changeset publish",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(stories).{js,tsx,ts,tsx}": [
      "eslint --cache --quiet --fix",
      "jest --bail --findRelatedTests",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,json,yml,md,mdx,html}": [
      "prettier --write"
    ],
    "package.json": [
      "npx sort-package-json",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@autoguru/eslint-plugin": "*",
    "@changesets/cli": "^2.8.0",
    "@manypkg/cli": "^0.13.0",
    "@types/node": "^14.0.11",
    "browserslist-config-autoguru": "*",
    "eslint": "^6.7.2",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^8.2.1",
    "plop": "^2.7.1",
    "prettier": "^2.0.5",
    "typescript": "~3.9.5"
  },
  "volta": {
    "node": "12.16.1",
    "yarn": "1.22.1"
  }
}
